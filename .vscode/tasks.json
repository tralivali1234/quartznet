{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args":
             [ 
                "src/Quartz/project.json",
                "src/Quartz.Examples/project.json",
                "src/Quartz.Tests.Unit/project.json",
                "src/Quartz.Tests.Integration/project.json"
             ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "args":
             [ 
                "src/Quartz.Tests.Unit/project.json",
                "src/Quartz.Tests.Integration/project.json"
             ],
            "showOutput": "silent",
            "isTestCommand": true
        }        
    ]
}